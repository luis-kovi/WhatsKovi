{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["npm ci"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run build"]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "local": true,
        "include": ["."],
        "exclude": ["node_modules", ".next"]
      },
      {
        "step": "install",
        "include": ["node_modules"]
      },
      {
        "step": "build",
        "include": [".next"]
      }
    ],
    "startCommand": "npm run start"
  }
}
