{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "npm ci --prefix backend",
        "npm run --prefix backend prisma:generate"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run --prefix backend build"]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "local": true,
        "include": ["backend"],
        "exclude": [
          "backend/node_modules",
          "backend/dist",
          "backend/.turbo",
          "backend/.next"
        ]
      },
      {
        "step": "install",
        "include": ["backend/node_modules"]
      },
      {
        "step": "build",
        "include": ["backend/dist"]
      }
    ],
    "startCommand": "cd backend && npx prisma migrate deploy && npm run start"
  }
}
