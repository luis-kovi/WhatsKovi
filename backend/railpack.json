{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "npm ci",
        "npm run prisma:generate"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run build"]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "local": true,
        "include": ["."],
        "exclude": [
          "node_modules",
          "dist",
          ".turbo",
          ".next"
        ]
      },
      {
        "step": "install",
        "include": ["node_modules"]
      },
      {
        "step": "build",
        "include": ["dist"]
      }
    ],
    "startCommand": "npx prisma migrate deploy && npm run start"
  }
}
