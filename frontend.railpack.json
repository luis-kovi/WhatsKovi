{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["npm ci --prefix frontend"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run --prefix frontend build"]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "local": true,
        "include": ["frontend"],
        "exclude": ["frontend/node_modules", "frontend/.next"]
      },
      {
        "step": "install",
        "include": ["frontend/node_modules"]
      },
      {
        "step": "build",
        "include": ["frontend/.next"]
      }
    ],
    "startCommand": "cd frontend && npm run start"
  }
}
